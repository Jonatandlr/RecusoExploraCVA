---
import Personaje from "./Personaje.astro";
import Botoncito from "./ReactComponents/Botoncito";
import LinkRecursos from "./ReactComponents/LinkRecursos";
---

<section
  class="min-w-full text-black flex md:flex-row flex-col items-center  h-3/4 md:py-10 py-0 "
>
  <div
    class="md:text-left text-center md:text-[2.5vw] leading-normal text-2xl font-medium md:w-1/3 w-full md:py-9 py-0 pointer-events-none"
  >
    <span class="animate-fade-in animate-duration-200 animate-delay-150 "
      >Explora</span
    >
    <span class="animate-fade-in animate-duration-300 animate-delay-200"
      >un</span
    >
    <span class="animate-fade-in animate-duration-400 animate-delay-250"
      >mundo</span
    >
    <span class="animate-fade-in animate-duration-500 animate-delay-300"
      >educativo</span
    >
    <span class="animate-fade-in animate-duration-700 animate-delay-400"
      >lleno</span
    >
    <span class="animate-fade-in animate-duration-800 animate-delay-500"
      >de</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-700"
      >herramientas</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-800">y</span
    >
    <span class="animate-fade-in animate-duration-1000 animate-delay-900"
      >materiales</span
    >
    <span class="animate-fade-in animate-duration-1000 animate-delay-1000"
      >variados</span
    >
  </div>

  <div class="md:w-2/3 w-full grid grid-cols-3 gap-3 relative h-full min-h-[360px]  overflow-y-hidden z-50 ">
    <Personaje canvaName="model1" data-astro-prefetch/>
    <LinkRecursos estilo="border " ruta="Adultos" idName="AdultoBoton" />

    <LinkRecursos estilo="border " ruta="Jovenes" idName="JovenesBoton" />
    <LinkRecursos estilo="border " ruta="ninos" idName="kidsboton" />
  </div>
</section>


---

<section
  class="min-w-full text-white flex md:flex-row flex-col min-h-[350px] border-b-2"
>
  <div
    class="text-right md:text-left max-w-[454px] text-2xl md:text-3xl font-normal leading-normal md:leading-10 ml-16 pt-10"
  >
    <span class="animate-fade-in animate-duration-900 animate-delay-150"
      >Explora</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-200"
      >un</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-250"
      >mundo</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-300"
      >educativo</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-400"
      >lleno</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-500"
      >de</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-700"
      >herramientas</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-800">y</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-900"
      >materiales</span
    >
    <span class="animate-fade-in animate-duration-900 animate-delay-1000"
      >variados</span
    >
  </div>

  <div class="w-full flex grid-cols-3 gap-3">
    <Personaje canvaName="model1" />

    <LinkRecursos
      estilo="flex justify-center "
      ruta="Adultos"
      idName="AdultoBoton"
    />
    <LinkRecursos
      estilo="flex justify-center "
      ruta="Jovenes"
      idName="JovenesBoton"
    />

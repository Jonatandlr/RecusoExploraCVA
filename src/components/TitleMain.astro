---
const { title } = Astro.props;
---

<section
  class="animate-fade-in animate-duration-900 animate-delay-200  md:h-1/3 h-fit  flex justify-center items-center "
>
  <!-- <div class="flex justify-center relative text-[8vw]"> -->
    <!-- <div
      class="w-full h-full top-0 bg-base absolute blur-[150px] animate-fade-in animate-duration-500"
    /> -->

    <h1 class="text-[9vw]   font-bold   text-center md:py-10 py-0 pt-28">{title}</h1>
  <!-- </div> -->
</section>

<style>
  .custom-text-shadow {
    text-shadow:
      2px 2px 0 #000,
      /* Negro */ -2px -2px 0 #000,
      2px -2px 0 #000,
      -2px 2px 0 #000,
      0px 2px 0 #000,
      2px 0px 0 #000,
      0px -2px 0 #000,
      -2px 0px 0 #000;
  }
  @keyframes move {
    to {
      background-position: 200% center;
    }
  }
  h1 {
    background: linear-gradient(
      to right,
      #9ad8ff 20%,
      #377fab 40%,
      #005dae 60%,
      #9ad8ff 80%
    );
     background-size: 200%;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    -webkit-text-fill-color: transparent;
    animation: move 5s linear infinite;
    -webkit-text-stroke: 2px #000; 
    /*text-stroke: 2px #000; 
     Para navegadores que soportan text-stroke */
    /*/* -webkit-text-stroke: 2px #000;  */
    /* Para compatibilidad con WebKit */
  } 
</style>
